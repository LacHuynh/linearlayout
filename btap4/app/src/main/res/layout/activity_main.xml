<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_height="0sp">
        <TextView
            android:text="1"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0sp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:background="#E8EB1616"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="4"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_height="0sp"/>
            <TextView
                android:background="#A4D81B60"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="3"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_height="0sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#D843A047"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_height="0sp">
        <TextView
            android:background="#BAFDD835"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0sp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:background="#039BE5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="20sp"
                    android:layout_height="0sp"/>
                <TextView
                    android:background="#EB5E35B1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_height="0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0sp"
                android:weightSum="3"
                android:layout_height="match_parent">
                <TextView
                    android:background="#C18E24AA"
                    android:text="7"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"/>
                <TextView
                    android:background="#C9FB8C00"
                    android:text="8"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"/>
                <TextView
                    android:background="#E9B9F6CA"
                    android:text="9"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>